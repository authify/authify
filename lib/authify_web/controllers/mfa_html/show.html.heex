<.two_column_layout flash={@flash}>
  <:sidebar>
    <.organization_sidebar
      user={@user}
      organization={@organization}
      current_page="mfa"
    />
  </:sidebar>
  <:main>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Multi-Factor Authentication</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
          <a
            href={~p"/#{@organization.slug}/profile"}
            class="btn btn-outline-secondary btn-sm"
          >
            <i class="bi bi-arrow-left"></i> Back to Profile
          </a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <!-- MFA Status Overview Card -->
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">
              <i class="bi bi-shield-lock"></i> Multi-Factor Authentication
            </h5>
          </div>
          <div class="card-body">
            <%= if Authify.Accounts.User.mfa_enabled?(@user) do %>
              <p>
                <span class="badge bg-success fs-6">
                  <i class="bi bi-check-circle"></i> Enabled
                </span>
              </p>
              <p class="text-muted mb-0">
                Your account is protected with multi-factor authentication.
              </p>
            <% else %>
              <p>
                <span class="badge bg-secondary fs-6">Not Enabled</span>
              </p>
              <p class="text-muted mb-3">
                Add an extra layer of security to your account with multi-factor authentication.
              </p>
              <a
                href={~p"/#{@organization.slug}/profile/mfa/setup"}
                class="btn btn-primary"
              >
                <i class="bi bi-shield-plus"></i> Setup Multi-Factor Authentication
              </a>
            <% end %>
          </div>
        </div>
        
<!-- TOTP Status Card -->
        <div class="card mt-3">
          <div class="card-header d-flex align-items-center">
            <h5 class="card-title mb-0">
              <i class="bi bi-phone"></i> Authenticator App (TOTP)
            </h5>
            <%= if Authify.Accounts.User.totp_enabled?(@user) do %>
              <div class="ms-auto">
                <span class="badge bg-success">
                  <i class="bi bi-check-circle"></i> Active
                </span>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <%= if Authify.Accounts.User.totp_enabled?(@user) do %>
              <p class="text-muted mb-3">
                <small>
                  Enabled on: {Calendar.strftime(
                    @user.totp_enabled_at,
                    "%B %d, %Y at %I:%M %p"
                  )}
                </small>
              </p>

              <div class="alert alert-warning">
                <h6><i class="bi bi-exclamation-triangle"></i> Disable TOTP</h6>
                <p class="mb-3">
                  Disabling TOTP authentication will remove this method. If you have no other MFA methods, your account will be less secure.
                </p>

                <button
                  type="button"
                  class="btn btn-outline-danger btn-sm"
                  data-bs-toggle="modal"
                  data-bs-target="#disableMfaModal"
                >
                  <i class="bi bi-x-circle"></i> Disable TOTP
                </button>
              </div>
            <% else %>
              <p class="text-muted mb-3">
                Use an authenticator app like Google Authenticator, Authy, or 1Password to generate time-based codes.
              </p>
              <a
                href={~p"/#{@organization.slug}/profile/mfa/setup"}
                class="btn btn-outline-primary btn-sm"
              >
                <i class="bi bi-plus-circle"></i> Enable TOTP
              </a>
            <% end %>
          </div>
        </div>
        
<!-- WebAuthn Status Card -->
        <div class="card mt-3">
          <div class="card-header d-flex align-items-center">
            <h5 class="card-title mb-0">
              <i class="bi bi-shield-check"></i> Security Keys & Passkeys (WebAuthn)
            </h5>
            <%= if Authify.Accounts.User.webauthn_enabled?(@user) do %>
              <div class="ms-auto">
                <span class="badge bg-success">
                  <i class="bi bi-check-circle"></i> Active
                </span>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <%= if length(@webauthn_credentials) > 0 do %>
              <p class="text-muted mb-3">
                You have {length(@webauthn_credentials)} security {if length(
                                                                        @webauthn_credentials
                                                                      ) == 1,
                                                                      do: "key",
                                                                      else: "keys"} registered.
              </p>

              <div class="list-group mb-3">
                <%= for credential <- Enum.take(@webauthn_credentials, 3) do %>
                  <div class="list-group-item">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                      <div>
                        <h6 class="mb-1">
                          <%= if credential.credential_type == "platform" do %>
                            <i class="bi bi-laptop"></i>
                          <% else %>
                            <i class="bi bi-key"></i>
                          <% end %>
                          {credential.name || "Unnamed Security Key"}
                        </h6>
                        <p class="mb-0 small text-muted">
                          Type: {String.capitalize(credential.credential_type || "roaming")}<br />
                          <%= if credential.last_used_at do %>
                            Last used: {Calendar.strftime(
                              credential.last_used_at,
                              "%B %d, %Y at %I:%M %p"
                            )}
                          <% else %>
                            Never used
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="d-flex gap-2">
                <a
                  href={~p"/#{@organization.slug}/profile/webauthn"}
                  class="btn btn-outline-primary btn-sm"
                >
                  <i class="bi bi-gear"></i> Manage Security Keys
                </a>
                <a
                  href={~p"/#{@organization.slug}/profile/webauthn/setup"}
                  class="btn btn-outline-secondary btn-sm"
                >
                  <i class="bi bi-plus-circle"></i> Add Another
                </a>
              </div>
            <% else %>
              <p class="text-muted mb-3">
                Use physical security keys (YubiKey, etc.) or built-in biometrics (Touch ID, Face ID, Windows Hello) for passwordless authentication.
              </p>
              <a
                href={~p"/#{@organization.slug}/profile/webauthn/setup"}
                class="btn btn-outline-primary btn-sm"
              >
                <i class="bi bi-plus-circle"></i> Register Security Key
              </a>
            <% end %>
          </div>
        </div>

        <%= if Authify.Accounts.User.totp_enabled?(@user) do %>
          <!-- Backup Codes Card -->
          <div class="card mt-3">
            <div class="card-header">
              <h5 class="card-title mb-0">
                <i class="bi bi-key"></i> Backup Codes
              </h5>
            </div>
            <div class="card-body">
              <p class="mb-2">
                Backup codes allow you to access your account if you lose access to your
                authenticator app. Each code can only be used once.
              </p>
              <div class="d-flex align-items-center mb-3">
                <div>
                  <strong>{@backup_codes_count}</strong> backup codes remaining
                </div>
                <div class="ms-auto">
                  <a
                    href={~p"/#{@organization.slug}/profile/mfa/regenerate-codes"}
                    data-method="post"
                    class="btn btn-sm btn-outline-primary"
                  >
                    <i class="bi bi-arrow-clockwise"></i> Regenerate Codes
                  </a>
                </div>
              </div>
              <%= if @backup_codes_count < 3 do %>
                <div class="alert alert-warning mb-0">
                  <small>
                    <i class="bi bi-exclamation-triangle"></i>
                    You're running low on backup codes. Consider regenerating them.
                  </small>
                </div>
              <% end %>
            </div>
          </div>
          
<!-- Trusted Devices Card -->
          <div class="card mt-3">
            <div class="card-header d-flex align-items-center">
              <h5 class="card-title mb-0">
                <i class="bi bi-phone"></i> Trusted Devices
              </h5>
              <%= if length(@trusted_devices) > 0 do %>
                <div class="ms-auto">
                  <a
                    href={~p"/#{@organization.slug}/profile/mfa/devices"}
                    data-method="delete"
                    data-confirm="Are you sure you want to revoke all trusted devices? You will need to verify MFA on all devices again."
                    class="btn btn-sm btn-outline-danger"
                  >
                    <i class="bi bi-x-circle"></i> Revoke All
                  </a>
                </div>
              <% end %>
            </div>
            <div class="card-body">
              <%= if length(@trusted_devices) > 0 do %>
                <p class="mb-3">
                  These devices won't require MFA verification for 30 days.
                </p>
                <div class="list-group">
                  <%= for device <- Enum.take(@trusted_devices, 5) do %>
                    <div class="list-group-item">
                      <div class="d-flex w-100 justify-content-between align-items-start">
                        <div>
                          <h6 class="mb-1">
                            <i class="bi bi-phone"></i> {device.device_name}
                          </h6>
                          <p class="mb-1 small text-muted">
                            IP: {device.ip_address}<br />
                            Last used: {Calendar.strftime(
                              device.last_used_at,
                              "%B %d, %Y at %I:%M %p"
                            )}
                            <br />
                            Expires: {Calendar.strftime(
                              device.expires_at,
                              "%B %d, %Y"
                            )}
                          </p>
                        </div>
                        <a
                          href={~p"/#{@organization.slug}/profile/mfa/devices/#{device.id}"}
                          data-method="delete"
                          data-confirm="Revoke this device?"
                          class="btn btn-sm btn-outline-danger"
                        >
                          <i class="bi bi-x"></i> Revoke
                        </a>
                      </div>
                    </div>
                  <% end %>
                </div>
                <%= if length(@trusted_devices) > 5 do %>
                  <div class="mt-3 text-center">
                    <a
                      href={~p"/#{@organization.slug}/profile/mfa/devices"}
                      class="btn btn-sm btn-outline-secondary"
                    >
                      View All Devices ({length(@trusted_devices)})
                    </a>
                  </div>
                <% end %>
              <% else %>
                <p class="text-muted mb-0">
                  <i class="bi bi-info-circle"></i>
                  No trusted devices. Check "Remember this device" during login to skip MFA
                  verification for 30 days.
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h6 class="card-title mb-0">
              <i class="bi bi-shield-check"></i> Security Tips
            </h6>
          </div>
          <div class="card-body">
            <ul class="mb-0">
              <li>Keep your authenticator app secure</li>
              <li>Save backup codes in a safe place</li>
              <li>Regularly review trusted devices</li>
              <li>Don't share verification codes</li>
            </ul>
          </div>
        </div>

        <%= if Authify.Accounts.User.totp_enabled?(@user) do %>
          <div class="card mt-3">
            <div class="card-header">
              <h6 class="card-title mb-0">
                <i class="bi bi-question-circle"></i> About Backup Codes
              </h6>
            </div>
            <div class="card-body">
              <p class="mb-0 small">
                Backup codes are single-use codes that allow you to access your account if you
                lose your phone or authenticator app. Store them in a secure location like a
                password manager or safe.
              </p>
            </div>
          </div>

          <div class="card mt-3">
            <div class="card-header">
              <h6 class="card-title mb-0">
                <i class="bi bi-info-circle"></i> Managing Devices
              </h6>
            </div>
            <div class="card-body">
              <p class="mb-0 small">
                Trusted devices allow you to skip MFA verification for 30 days. Revoke devices
                if you no longer use them or suspect unauthorized access.
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
<!-- Disable TOTP Modal -->
    <%= if Authify.Accounts.User.totp_enabled?(@user) do %>
      <div
        class="modal fade"
        id="disableMfaModal"
        tabindex="-1"
        aria-labelledby="disableMfaModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="disableMfaModalLabel">
                <i class="bi bi-x-circle"></i> Disable TOTP Authentication
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              >
              </button>
            </div>
            <.form
              for={%{}}
              action={~p"/#{@organization.slug}/profile/mfa"}
              method="delete"
            >
              <div class="modal-body">
                <div class="alert alert-warning">
                  <i class="bi bi-exclamation-triangle"></i>
                  <%= if Authify.Accounts.User.webauthn_enabled?(@user) do %>
                    This will disable TOTP authentication. You will still have WebAuthn security keys enabled.
                  <% else %>
                    This will disable TOTP authentication and make your account less secure. All trusted devices will be revoked.
                  <% end %>
                </div>

                <div class="mb-3">
                  <label for="password_confirm" class="form-label">
                    Enter your password to confirm
                  </label>
                  <input
                    type="password"
                    name="password"
                    id="password_confirm"
                    class="form-control"
                    required
                    autocomplete="current-password"
                  />
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Cancel
                </button>
                <button type="submit" class="btn btn-danger">
                  <i class="bi bi-x-circle"></i> Disable TOTP
                </button>
              </div>
            </.form>
          </div>
        </div>
      </div>
    <% end %>
  </:main>
</.two_column_layout>
