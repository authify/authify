#!/bin/bash
# Git pre-commit hook for Authify
# Runs fast quality checks before allowing commits

set -e

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Run fast precommit checks (skips tests for speed)
if mix precommit.fast; then
    echo -e "${GREEN}✓ Pre-commit checks passed!${NC}"
    exit 0
else
    echo -e "${RED}✗ Pre-commit checks failed!${NC}"
    echo -e "${YELLOW}Fix the issues above, or run 'git commit --no-verify' to bypass (not recommended)${NC}"
    exit 1
fi
